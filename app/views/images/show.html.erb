<p id="notice"><%= notice %></p>

<div class="card mb-2">
  <div class="card-body">
    <p>
      <strong>Name:</strong>
      <%= @image.name %>
    </p>

    <div>
      <%= image_tag(@image.picture.url, size: "400x400") if @image.picture? %>
    </div>

  </div>
</div>


<%= link_to 'Edit', edit_image_path(@image), class: 'btn btn-outline-secondary mr-1' %> 
<%= link_to 'Back', images_path, class: 'btn btn-outline-secondary' %>
